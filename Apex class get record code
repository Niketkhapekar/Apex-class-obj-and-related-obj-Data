public class  Invoice_PDF {
    public string InvoiceDue{get;set;}
  	public string InvoiceDate {get;set;}
    public Invoice__c InvoiceData {get;set;}     
    public list<Invoice_line_item__c> InvoiceLinelist {get;set;}    
    public Invoice_PDF(ApexPages.StandardController stdcontroller){ 
        string RecordId = ApexPages.currentPage().getParameters().get('id');
      
        InvoiceData = [select id,name,Place_of_Supply__c, GST__c, Invoice_Number__c,Term__c, Invoice_Date__c,Total_Amount_Including_GST__c,Invoice_Due_Date__c,
                       Opportunity__r.name,Opportunity__r.Account.id, Opportunity__r.Account.GSTIN_NO__c,Opportunity__r.Account.name, Opportunity__r.Account.BillingCity
                       from Invoice__c where Id =: RecordId];
        
        //integer InvoiceDataSrnoSize = InvoiceData.size();
        
        datetime InvDate = InvoiceData.Invoice_Date__c; 
     	datetime  InvoiceDate1 = datetime.newInstance(InvDate.year(), InvDate.month(), InvDate.day());
        InvoiceDate =InvoiceDate1.format('dd/MM/yyyy');
        
     	datetime InvD = InvoiceData.Invoice_Due_Date__c; 
     	datetime   InvoiceDue1 = datetime.newInstance(InvD.year(), InvD.month(), InvD.day());
        InvoiceDue =InvoiceDue1.format('dd/MM/yyyy');
        
        InvoiceLinelist = [select id,Name,Invoice__c,SAC_HSN_Code__c,NetAmount__c,Gross_Amount__c,Date__c,Description__c,Tax__c,Unit__c,Quantity__c from Invoice_line_item__c where Invoice__c =:RecordId];
  
    }
}
